{% extends 'base.html.twig' %}


{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': "Renseigner votre userName"} })}}
    {{ form_row(form.email, {'label': 'Adresse Email','attr': {'placeholder': "Renseigner votre email"} })}}
    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': "Renseigner votre Password"} })}}
    {{ form_row(form.comfirm_password, {'label': 'Comfirmation du mot de passe','attr': {'placeholder': "Comfirmer votre Password"} })}}

    <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}


{% endblock %} 
